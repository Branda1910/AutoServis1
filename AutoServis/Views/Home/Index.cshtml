@{
    ViewData["Title"] = "Dobrodošli";
    Layout = "_Layout";
}

<div class="container vh-100 d-flex flex-column justify-content-center align-items-center">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Dobrodošli u AutoServis</h1>
        <p class="lead text-muted">Molimo odaberite vašu ulogu za prijavu</p>
    </div>

    <div class="row gx-4 gy-4 w-100" style="max-width: 800px;">
        
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <div>
                        <i class="bi bi-person-circle fs-1 text-primary mb-3"></i>
                        <h5 class="card-title">Korisnik</h5>
                        <p class="card-text text-muted">Prijavite se kako biste upravljali svojim vozilom i terminima.</p>
                    </div>
                    <a href="/Korisnik/Login" class="btn btn-primary mt-3">Prijava kao korisnik</a>
                </div>
            </div>
        </div>

        
        <div class="col-md-6">
            <div class="card shadow-sm h-100 border-danger">
                <div class="card-body d-flex flex-column justify-content-between text-center">
                    <div>
                        <i class="bi bi-tools fs-1 text-danger mb-3"></i>
                        <h5 class="card-title">Autoserviser</h5>
                        <p class="card-text text-muted">Prijavite se kako biste upravljali radnim nalozima i servisima.</p>
                    </div>
                    <a href="/Admin/Login" class="btn btn-danger mt-3">Prijava kao autoserviser</a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
</style>