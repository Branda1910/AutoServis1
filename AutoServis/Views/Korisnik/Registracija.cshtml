@model AutoServis.Models.Korisnik
@{
    ViewData["Title"] = "Registracija";
    Layout = "_Layout";
}

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="card shadow-sm mx-auto" style="max-width: 500px; width: 100%;">
        <div class="card-header text-center bg-white">
            <i class="bi bi-person-plus-fill fs-1 text-primary"></i>
            <h3 class="card-title mt-2">Registracija korisnika</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.Poruka != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewBag.Poruka
                </div>
            }

            <form asp-action="Registracija" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Ime" class="form-label"></label>
                    <input asp-for="Ime" class="form-control" />
                    <span asp-validation-for="Ime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Prezime" class="form-label"></label>
                    <input asp-for="Prezime" class="form-control" />
                    <span asp-validation-for="Prezime" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Lozinka" class="form-label"></label>
                    <input asp-for="Lozinka" type="password" class="form-control" />
                    <span asp-validation-for="Lozinka" class="text-danger"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-primary">Registriraj se</button>
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <small class="text-muted">Već imate račun? <a asp-controller="Korisnik" asp-action="Login">Prijavite se</a></small>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
