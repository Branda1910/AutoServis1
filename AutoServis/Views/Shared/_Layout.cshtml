@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoServis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm mb-4">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">AutoServis</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Privacy">Privacy</a></li>

                        
                        @if (HttpContextAccessor.HttpContext?.Session.GetString("admin") == "true")
                        {
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Servis" asp-action="Popis">Narudžbe za potvrdu</a></li>
                            <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="PopisKorisnika">Popis korisnika</a></li>
                            <li class="nav-item"><a class="nav-link text-danger" asp-controller="Admin" asp-action="Logout">Odjava admina</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Korisnik" asp-action="Registracija">Registracija</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Korisnik" asp-action="Login">Prijava</a></li>
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Admin" asp-action="Login">Admin Prijava</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            &copy; 2025 - AutoServis - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
